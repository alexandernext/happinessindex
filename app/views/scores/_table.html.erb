<div class="row">
  <div class="col-md-8">
    <table class="table table-default">
      <thead>
        <tr>
          <th>日期</th>
          <th>時間</th>
          <th>評分</th>
          <th>理由</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% score_sum = 0 %>
        <% @scores.each do |score| %>
          <tr>
            <td><%= score.day %></td>
            <td><%= score.time_text(score) %></td>
            <td><%= score.value %></td>
            <% score_sum += score.value %>
            <td><%= score.description %></td>
            <td><%= link_to '編輯', edit_score_path(score) %></td>
            <td><%= link_to '刪除', score, method: :delete, data: { confirm: '是否確定刪除此筆紀錄？' } %></td>
          </tr>
        <% end %>
        <% if @scores.count > 0 %>
          <tr>
            <td><b>目前平均值<b></td>
            <td></td>
            <td><%= (score_sum.to_f / @scores.count).round(1) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
